
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginTemplate.cshtml";
}

@using (Html.BeginForm("NewUser", "Register", FormMethod.Post))
{
    <!--============================================ titulo ============================================-->
    <span class="login100-form-title">
        Novo Usuario
    </span>

    <!--============================================ UserForm ============================================-->
    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
        <input class="input100" type="text" name="User" placeholder="Usuario">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>

    <!--============================================ PassForm ============================================-->
    <div class="wrap-input100 validate-input" data-validate="Password is required">
        <input class="input100" type="password" name="Pass" placeholder="Senha">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="Password is required">
        <input class="input100" type="password" name="Pass-Replic" placeholder="Repita a Senha">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>

    <!--============================================ CreateBotton ============================================-->
    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            Criar
        </button>
    </div>

    <!--============================================ Acordo ============================================-->
    <div class="text-center p-t-12">
        <a class="txt2">
            Ao Clicar em criar você estará de Acordo com todos os Termos.
        </a>
    </div>

    <div class="text-center p-t-136"></div>
}