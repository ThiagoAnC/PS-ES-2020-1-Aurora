<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/icons/favicon.ico")" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/vendor/bootstrap/css/bootstrap.min.css")">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/util.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/main.css")">
    <!--===============================================================================================-->
</head>
<body style="background-color: whitesmoke">
    <div class="Navbar">
        <div class="container">
            <div class="navbar-header">
                <img class="icon-bar" src="@Url.Content("~/Content/Images/icons/icon-01.png")" alt="IMG" style="float: left">
                @Html.ActionLink("PiggyFinc", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "float: left; margin-top: 4px;" })
                @Html.ActionLink("Sair", "Quit", "Login", new { area = "" }, new { @class = "navbar-brand", @style = "float: right; margin-top: 4px;"})
                <br/><br/>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="container" >
        </div>
        @RenderBody()
        <footer style="position:absolute; bottom:0; width:80%; height:60px">
        <hr/>
            <p style="color: gray;">
                &copy; @DateTime.Now.Year - PiggyFinc
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
