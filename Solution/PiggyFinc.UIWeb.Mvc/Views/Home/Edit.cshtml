
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/part.css")">
    <script src="https://kit.fontawesome.com/c6fba2bf0c.js" crossorigin="anonymous"></script>
    <!--===============================================================================================-->
</head>
<body>
    <div class="row">
        <!--=================================== Top Card =================================-->
        <div class="column">
            <div class="card-income" style="width:100%">
                <i class="fas fa-save" style="margin-left:12px"></i>
                @Html.ActionLink("Salvar", "Transaction", "Home", "", new { @class = "h8", @style = "color: #FFFFFF" })
                <i class="fas fa-window-close" style="margin-left:12px"></i>
                @Html.ActionLink("Cancelar", "Transaction", "Home", "", new { @class = "h8", @style = "color: #FFFFFF" })
            </div>
        </div>
    </div>

    <!--=================================== Scaffold =================================-->
    <div class="column">
        <div class="scaffold" style="width:100%">
            <p style="color: #2cb282">Editar</p>
            <br />
            <input id="name" class="input100" type="text" name="name" placeholder="Descrição" style="font-size-adjust:0.5; padding:0 20px">
            <br />
            <input id="category" class="input100" type="text" name="category" placeholder="Categoria" style="font-size-adjust:0.5;padding:0 20px">
            <br />
            <input id="category" class="input100" type="text" name="category" placeholder="Valor" style="font-size-adjust:0.5;padding:0 20px">
        </div>
    </div>
</body>
</html>
