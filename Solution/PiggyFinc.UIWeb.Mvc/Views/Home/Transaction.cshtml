
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/part.css")">
    <script src="https://kit.fontawesome.com/c6fba2bf0c.js" crossorigin="anonymous"></script>
    <!--===============================================================================================-->
</head>
<body>
    <div class="row">
        <!--=================================== Top Card =================================-->
        <div class="column">
            <div class="card-income" style="width:200%">
                <i class="fas fa-plus-circle" style="float:right;margin:8px 150px"></i>
                <h3>R$ 1000.00</h3>
                <h8>Total de Entradas</h8>
                <p>Dinheiro Recebido</p>
            </div>
        </div>
    </div>

    <!--=================================== Scaffold =================================-->
    <div class="column">
        <div class="scaffold" style="width:200%">
            <p style="color: #2cb282">Ultimos Lançamentos</p>
            <br />
            <table>
                <ts>
                    <td>Descrição</td>
                    <td>Categoria</td>
                    <td>Valor</td>
                    <td>Ação</td>
                    <td style="color: whitesmoke">values</td>
                </ts>
                @for (var i = 0; i < 5; i++)
                {
                    <tr>
                        <td>Consultoria UFG</td>
                        <td>R$ 100.00</td>
                        <td>R$ 100.00</td>
                        <td>
                            <i class="fas fa-edit" style="padding: 0 3px"></i>
                            <i class="fas fa-trash-alt"></i>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    </div>
</body>
</html>
